<Page
    x:Class="Uwp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Uwp.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid>
        <Frame
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            DataContext="{Binding CurrentViewModel}"
            Content="{Binding Converter={StaticResource ViewModelToPage}}" />
        <controls:CrunchyrollPlayer
            ViewModel="{Binding CurrentMediaViewModel}"
            Volume="{Binding Volume, Mode=TwoWay}"
            Visibility="{Binding CurrentMediaViewModel, Converter={StaticResource NullToVisibility}, FallbackValue=Collapsed}"
            CloseCommand="{Binding CloseVideoCommand}"
            Width="640" Height="360" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.ZIndex="1" />
    </Grid>
</Page>
