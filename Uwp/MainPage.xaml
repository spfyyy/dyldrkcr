<Page
    x:Class="Uwp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="using:Shared"
    xmlns:converters="using:Uwp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{x:Bind shared:Application.ViewModel}">
    <Page.Resources>
        <converters:ViewModelToPageConverter x:Key="ViewModelToPage" />
    </Page.Resources>
    <Grid>
        <Frame
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            DataContext="{Binding CurrentViewModel}"
            Content="{Binding Converter={StaticResource ViewModelToPage}}" />
    </Grid>
</Page>
